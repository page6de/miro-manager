{
  "name": "Miro Managers",
  "description": "Defeating the Chaos of Miro Boards",
  "version": "1.0",
  "manifest_version": 3,
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/48.png"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://miro.com/app/board/*=/"],
      "js": ["js/content-script.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "webRequest"
  ],
  "host_permissions": [
    "https://miro.com/*"
  ]
}